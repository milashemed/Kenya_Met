<div id="loginModal" class="modal fade" role="dialog">
  <div class="modal-dialog">  
<div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">System Login</h4>
      </div>
      <div class="modal-body">
          <form class="form-horizontal" role="form">
              
              <div class="form-group" style="margin: 2%;">
                  <label class="control-label col-sm-1" for="txtuname">Username </label>
                  <input type="text" id="txtuname" class="form-control" placeholder="Enter Username" />
              </div>
              <div class="form-group" style="margin: 2%;">
                  <label class="control-label col-sm-1" for="txtpasswd">Password </label>
                  <input type="password" id="txtpasswd" class="form-control" placeholder="Enter Password" />
              </div>
               
          </form>
      </div>
    <div class="notify" id="notifylogin"><span>Notify</span></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-block btn-lg"  id="btnlogin">Login</button>
      </div>
    </div>
  </div>
</div>
  
